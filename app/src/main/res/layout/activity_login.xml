<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hamz.sehatalaislam.activity.LoginActivity"
    android:paddingLeft="@dimen/activity_margin"
    android:paddingRight="@dimen/activity_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:lottie_fileName="code_invite_success.json"
            app:lottie_loop="true"
            app:lottie_autoPlay="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="USERNAME"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/edittext"
            android:paddingLeft="8dp"
            android:paddingRight="10dp"
            android:paddingTop="6dp"
            android:paddingBottom="14dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PASSWORD"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/edittext"
            android:inputType="textPassword"
            android:paddingLeft="8dp"
            android:paddingRight="10dp"
            android:paddingTop="6dp"
            android:paddingBottom="14dp"/>

        <Button
            android:id="@+id/btn_masuk"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:background="@color/buttonPrimaryDark"
            android:text="@string/sigin"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/btn_daftar"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:background="@color/buttonPrimary"
            android:text="@string/signup"
            android:textColor="@android:color/white"/>

    </LinearLayout>

</RelativeLayout>
