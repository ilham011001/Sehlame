<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hamz.sehatalaislam.SplashScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <TextView
            fontPath="fonts/Quicksand_Bold.otf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sehlame"
            android:textSize="38dp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="صحى علاء الاسلامى" />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:lottie_fileName="material_wave_loading.json"
            app:lottie_loop="true"
            app:lottie_autoPlay="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <TextView
            fontPath="fonts/Android.otf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="USMAKAPA"
            android:layout_alignParentBottom="true"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"
            />

    </LinearLayout>


</RelativeLayout>
